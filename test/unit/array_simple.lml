
module T = struct

  val int: int -> unit
  let int x =
    Print.int x ;
    Print.newline ()    

  val float: float -> unit
  let float x =
    Print.float x ;
    Print.newline ()    

  val test_int: unit -> unit
  let test_int () =
    let t = Array.imake 10 0 in
    let x = t.(3) in
    int x ;
    x := t.(0-1) ;
    int x ;
    x := t.(10) ;
    int x ;
    Array.irelease t

  val test_float: unit -> unit
  let test_float () =
    let t = Array.fmake 10 1.0 in
    let x = t.(3) in
    float x ;
    x := t.(0-1) ;
    float x ;
    x := t.(10) ;
    float x ;
    Array.frelease t

  val main: unit -> unit
  let main() = 
    test_int () ;
    test_float ()
end
